# Autonomous AI Operator - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# Application Configuration
# ============================================
APP_NAME=autonomous-ai-operator
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# ============================================
# CORS Configuration
# ============================================
# IMPORTANT: Do NOT use "*" in production (allows any website to call your API)
# Format: comma-separated list or JSON array
# Comma-separated example: ALLOWED_ORIGINS=https://myapp.com,https://api.myapp.com
# JSON array example: ALLOWED_ORIGINS=["https://myapp.com","https://api.myapp.com"]
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/autonomous_ai_operator
REDIS_URL=redis://localhost:6379/0
VECTOR_DIMENSION=1536

# ============================================
# Anthropic Claude Configuration
# ============================================
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.3

# ============================================
# Twilio Configuration
# ============================================
TWILIO_ACCOUNT_SID=ACyour-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1your-twilio-phone-number
TWILIO_WEBHOOK_URL=https://api.example.com/voice/webhook

# ============================================
# Vapi.ai Configuration
# ============================================
VAPI_API_KEY=your-vapi-api-key
VAPI_PROJECT_ID=your-vapi-project-id
VAPI_BASE_URL=https://api.vapi.ai

# ============================================
# ElevenLabs Configuration (TTS)
# ============================================
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=your-voice-id
ELEVENLABS_VOICE_SETTINGS={"stability":0.5,"similarity_boost":0.75}

# ============================================
# Deepgram Configuration (STT)
# ============================================
DEEPGRAM_API_KEY=your-deepgram-api-key
DEEPGRAM_MODEL=nova-2

# ============================================
# Serper API Configuration (Web Search)
# ============================================
SERPER_API_KEY=your-serper-api-key
SERPER_SEARCH_URL=https://google.serper.dev/search

# ============================================
# Email Configuration
# ============================================
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USERNAME=your-email@gmail.com
IMAP_PASSWORD=your-app-password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============================================
# Security Configuration
# ============================================
ENCRYPTION_KEY=your-32-byte-encryption-key-here-use-openssl-rand-base64-32
JWT_SECRET=your-jwt-secret-here-use-openssl-rand-base64-32
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================
# AWS Configuration (Deployment)
# ============================================
AWS_REGION=us-east-1
AWS_ECS_CLUSTER=autonomous-ai-operator
AWS_ECS_SERVICE=autonomous-ai-operator-service
AWS_ECR_REPOSITORY=autonomous-ai-operator
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# ============================================
# Monitoring & Observability
# ============================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_PORT=9090

# ============================================
# Cost Tracking
# ============================================
COST_TRACKING_ENABLED=true
COST_ALERT_THRESHOLD=10.00

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================
# Task Execution Configuration
# ============================================
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5
TIMEOUT_SECONDS=300
MAX_CALL_DURATION_MINUTES=30

# ============================================
# Email Configuration
# ============================================
EMAIL_FROM=noreply@autonomous-ai-operator.com
EMAIL_REPLY_TO=operator@autonomous-ai-operator.com
EMAIL_SUBJECT_PREFIX="[AI Operator] "

# ============================================
# Webhook Configuration
# ============================================
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT_SECONDS=30

# ============================================
# Feature Flags
# ============================================
ENABLE_VOICE=true
ENABLE_EMAIL=true
ENABLE_WEB_SEARCH=true
ENABLE_AUTO_REPLAN=true
ENABLE_COST_TRACKING=true
